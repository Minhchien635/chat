<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="432.0" prefWidth="479.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <ScrollPane fx:id="sp_main" fitToWidth="true" prefHeight="395.0" prefWidth="479.0">
            <content>
                <VBox fx:id="vbox_messages" prefHeight="457.0" prefWidth="416.0" />
            </content>
        </ScrollPane>
        <HBox>
            <children>
                <TextField fx:id="tf_message" prefHeight="35.0" prefWidth="403.0" />
                <Button onAction="#onActionClick" prefHeight="36.0" prefWidth="80.0" text="Send" />
            </children>
        </HBox>
    </children>
</VBox>
